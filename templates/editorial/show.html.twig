{% extends 'base.html.twig' %}

{% block title %}Editorial{% endblock %}

{% block body %}
    <h1>Editorial</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ editorial.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ editorial.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ editorial.address }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ editorial.country|country_name }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ editorial.phoneNumber }}</td>
            </tr>
        </tbody>
    </table>

    <a type="button" class="btn btn-primary" href="{{ path('editorial_index') }}">Back to list</a>
    {% if is_granted('ROLE_USER') %}
    <a type="button" class="btn btn-primary" href="{{ path('editorial_edit', {'id': editorial.id}) }}">Edit</a>

    {{ include('editorial/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
