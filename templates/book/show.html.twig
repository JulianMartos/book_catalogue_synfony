{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>PublishedDate</th>
                <td>{{ book.publishedDate ? book.publishedDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a type="button" class="btn btn-primary" href="{{ path('book_index') }}">Back to list</a>
    {% if is_granted('ROLE_USER') %}
    <a type="button" class="btn btn-primary" href="{{ path('book_edit', {'id': book.id}) }}">Edit</a>
    
    {{ include('book/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
